<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-10 ftco-animate">
                <form action="/user?_method=PUT" method="POST" enctype="multipart/form-data" name="userForm">
                    <div class="row align-items-end">

                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="password">Old password</label>
                                <input type="password" name="password" class="form-control" maxlength="100">
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="new_password">New password</label>
                                <input type="password" name="new_password" class="form-control" maxlength="100">
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="conf_password">Confirm Password</label>
                                <input type="password" name="conf_password" class="form-control" maxlength="100">
                            </div>
                        </div>
                    </div>
                    <div class="row mt-5 pt-3 d-flex">
                        <div class="col-md-6">
                            <a href="../" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>