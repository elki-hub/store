<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-10 ftco-animate">
                <form action="" method="POST" enctype="multipart/form-data" name="registrationForm">
                    <div class="row align-items-end">
                        <div class="col-md-5">
                            <div class="form-group">
                                <label for="name">First Name</label>
                                <input type="text" name="name" class="form-control" maxlength="100">
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="form-group">
                                <label for="Surname">Last Name</label>
                                <input type="text" name="surname" class="form-control" maxlength="100">
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="form-group">
                                <label for="birthday">Birthday</label>
                                <input type="date" name="birthday" class="form-control">
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="form-group">
                                <label for="phone">Phone</label>
                                <input type="text" name="phone" class="form-control" maxlength="100">
                            </div>
                        </div>
                        <div class="w-100"></div>
                        <div class="col-md-10">
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input type="email" name="email" class="form-control" maxlength="100">
                            </div>
                        </div>
                        <div class="w-100"></div>
                        <div class="col-md-10">
                            <div class="form-group">
                                <label for="address">Address</label>
                                <input type="text" name="address" class="form-control" maxlength="100">
                            </div>
                        </div>
                        <div class="w-100"></div>
                        <div class="col-md-10">
                            <div class="form-group">
                                <label for="new_password">Password</label>
                                <input type="password" name="new_password" class="form-control" maxlength="100">
                            </div>
                        </div>
                        <div class="col-md-10">
                            <div class="form-group">
                                <label for="conf_password">Confirm Password</label>
                                <input type="password" name="conf_password" class="form-control" maxlength="100">
                            </div>
                        </div>
                    </div>
                    <p class="mb-4 billing-heading">Already have an account? <a href="/user/login">Login!</a></p>
                    <div class="row mt-5 pt-3 d-flex">
                        <div class="col-md-6">
                            <a href="../" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary">Register</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>



