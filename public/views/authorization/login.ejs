<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-10 ftco-animate">
                <form action="" method="POST" enctype="multipart/form-data" name="drinkForm">
                    <div class="row align-items-end">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input required type="email" name="email" class="form-control" maxlength="100">
                            </div>
                        </div>
                        <div class="w-100"></div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="conf_password">Password</label>
                                <input required type="password" name="password" class="form-control" maxlength="100">
                            </div>
                        </div>
                    </div>
                    <p class="mb-4 billing-heading">Don't have an account yet? <a href="/register">Create an account!</a></p>
                    <div class="row mt-5 pt-3 d-flex">
                        <div class="col-md-6">
                            <a href="../" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>



