            </div>

            <div class="col-md-3">
                <div class="sidebar-box ftco-animate">
                    <div class="categories">
                        <h3>Drinks Types</h3>
                        <ul class="p-0">
                            <% categories.forEach( category => {%>
                                <li><a href="#"><%= category.name%><span class="fa fa-chevron-right"></span></a></li>
                            <%})%>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
