<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-left">
            <div class="col col-lg-5 col-md-6 mt-5 cart-wrap ftco-animate">
                <p class="text-center"><a href="/admin/category/new/" class="btn btn-primary py-3 px-4">Add new category</a></p>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="table">
                <table class="table">
                    <thead class="thead-primary">
                    <tr>
                        <th>&nbsp;</th>
                        <th>Category name</th>
                        <th>&nbsp;</th>
                        <th>&nbsp;</th>
                        <th>&nbsp;</th>
                    </tr>
                    </thead>
                    <tbody>
                    <%if(categories.length !== 0){
                      categories.forEach(category => { %>
                        <tr class="alert" role="alert" id="row<%= category._id%>">
                            <td>

                            </td>
                            <td>
                                <div class="email">
                                    <span><%= category.name %></span>
                                    <span> </span>
                                </div>
                            </td>
                            <td>
<!--                                <a href="./category.name" class="btn btn-primary">View drinks</a>-->
                            </td>
                            <td>
                                <a href="/admin/category/edit/<%= category.id %>" class="btn btn-info">Edit</a>
                            </td>
                            <td>
                                <button onclick="return doDelete('<%= category._id %>', 'category');" class="btn btn-danger">Delete</button>
                            </td>
                        </tr>
                    <% })} else{%>
                        <div class="col">
                            <p>You don't have any categories yet. Add new category!</p>
                        </div>
                    <%}%>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

<script>
  function doDelete(id, object){
    if(confirm('Are you sure you want to delete this item?')){
      console.log("id:"+id)
      $.ajax({
        url: "/admin/" + object+ "/" + id +"?_method=DELETE",
        method:"DELETE",
        data:{},
        success: function(){
          $("#row"+id).remove();
        }
      });
    }
    return false;
  }
</script>