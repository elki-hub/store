<section class="ftco-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 mb-5 ftco-animate">
                <% if(product.image === null){%>
                    <a href="/images/prod-1.jpg" class="image-popup prod-img-bg"><img src="/images/no-image.png" class="img-fluid" alt="No image"></a>
                <%} else{ %>
                        <a href="/images/products/<%= product._id %>_<%= product.image%>" class="image-popup prod-img-bg"><img src="/images/products/<%= product._id %>_<%= product.image%>" class="img-fluid" alt="No image"></a>
                <%}%>
            </div>
            <div class="col-lg-6 product-details pl-md-5 ftco-animate">
                <h3><%= product.name %></h3>
                <p class="price"><span><%= product.price %> â‚¬</span></p>
                <% if(product.categories.length > 0){%>
                    <p>Category: <%= product.categories[0].name %></p>
                <%}%>
                <p>Degree: <%= product.degree %></p>

                <p><%= product.description %></p>

                <p>
                    <a href="./" class="btn btn-primary py-3 px-5 mr-2">Go back</a>
                    <a href="/admin/product/edit/<%= product.id %>" class="btn btn-primary py-3 px-5">Edit</a>
                </p>
            </div>
        </div>
    </div>
</section>
