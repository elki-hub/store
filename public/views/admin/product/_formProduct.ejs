<div class="form-group">
    <label for="name">Product Name</label>
    <input required value="<%= product.name %>" type="text" name="name" id="name" class="form-control">
</div>
<div class="form-group">
    <label for="category">Category</label>
    <textarea name="category" id="category" class="form-control"><%= product.category %></textarea>
</div>
<div class="form-group">
    <label for="price">Price</label>
    <textarea name="price" id="price" class="form-control"><%= product.price %></textarea>
</div>
<div class="form-group">
    <label for="degree">Degree</label>
    <textarea name="degree" id="degree" class="form-control"><%= product.degree %></textarea>
</div>
<div class="form-group">
    <label for="description">Description</label>
    <textarea name="description" id="description" class="form-control"><%= product.description %></textarea>
</div>


<a href="../" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>